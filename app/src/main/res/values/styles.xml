<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="RoundRectangle">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="MainColor">
        <item name="android:color">@color/lightred</item>
    </style>
    <style name="TextFont">
        <item name="android:typeface">sans</item>
    </style>
    <style name="TextFont.WelcomeText">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextFont.Title">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextFont.Title.Middle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>
    <style name="TextFont.Title.Right">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="TextFont.Input">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">11dp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="TextFont.ImageUpload">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
</resources>
