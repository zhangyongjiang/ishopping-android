<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.nextshopper.activity.FavoriteActivity">

    <com.nextshopper.view.TitleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageLeft="@drawable/back"
        app:textMiddle="@string/favorites"
        app:textMiddleColor="@color/black"/>
    <GridView
        android:id="@+id/favorite_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
