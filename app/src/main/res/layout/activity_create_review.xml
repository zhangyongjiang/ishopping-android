<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nextshopper.activity.CreateReviewActivity">

    <com.nextshopper.view.TitleView
        android:id="@+id/create_review_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageLeft="@drawable/back"
        app:textMiddle="@string/create_a_review"
        app:textMiddleColor="@color/black"
        app:textRight="@string/create"
        app:textRightColor="@color/red"/>
    <View
        android:id="@+id/create_review_line"
        android:layout_width="match_parent"
        android:layout_below="@id/create_review_title"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_review_line"
        android:background="@drawable/rectangle_input">
        <TextView
            android:id="@+id/create_review_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/rating"/>
        <ImageView
            android:id="@+id/star_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:src="@drawable/start_0"/>
        <View
            android:id="@+id/rating_line"
            android:layout_width="match_parent"
            android:layout_below="@id/create_review_rating"
            android:layout_marginBottom="8dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <EditText
            android:id="@+id/create_review_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/rating_line"
            android:layout_margin="10dp"
            android:gravity="top"
            android:hint="@string/your_review"
            android:maxLines="10"/>
    </RelativeLayout>

</RelativeLayout>
