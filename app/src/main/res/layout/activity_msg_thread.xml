<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:nextshopper="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nextshopper.activity.MsgThreadActivity">

    <com.nextshopper.view.TitleView
        android:id="@+id/profile_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        nextshopper:imageLeft="@drawable/back"
        nextshopper:textMiddle="@string/message_thread"
        nextshopper:textMiddleColor="@color/black"
        nextshopper:textRight="@string/reply"
        nextshopper:textRightColor="@color/red"/>
    <View
        android:id="@+id/msg_title_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/profile_title"
        android:background="@color/grey" />
    <TextView
        android:id="@+id/msg_thread_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_title_line"
        android:text="@string/test"/>
    <ListView
        android:id="@+id/msg_thread_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/msg_thread_subject"/>
</RelativeLayout>
