<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nextshopper.activity.CreateReviewActivity">

    <com.nextshopper.view.TitleView
        android:id="@+id/create_review_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:imageLeft="@drawable/back"
        app:textMiddle="@string/review_title"
        app:textMiddleColor="@color/black"
        android:layout_margin="10dp"
        app:textRight="@string/send"
        app:textRightColor="@color/red"/>
    <View
        android:id="@+id/create_review_line"
        android:layout_width="match_parent"
        android:layout_below="@id/create_review_title"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_review_line"
        android:layout_margin="10dp"
        android:background="@drawable/rectangle_input">
        <RelativeLayout
            android:id="@+id/service_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/create_review_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:text="@string/service"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/create_review_rating"
                android:id="@+id/service_ratingBar" />
        </RelativeLayout>

        <View
            android:id="@+id/rating_line"
            android:layout_width="match_parent"
            android:layout_below="@id/service_rating"
            android:layout_marginBottom="8dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <RelativeLayout
           android:id="@+id/product_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rating_line">
            <TextView
                android:id="@+id/review_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:text="@string/product"/>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_ratingBar"
                android:layout_toRightOf="@id/review_product" />
        </RelativeLayout>

        <View
            android:id="@+id/product_line"
            android:layout_width="match_parent"
            android:layout_below="@id/product_rating"
            android:layout_marginBottom="8dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <EditText
            android:id="@+id/review_order_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/product_line"
            android:layout_margin="10dp"
            android:gravity="top"
            android:hint="@string/your_review"
            android:background="@null"
            android:maxLines="10"/>

    </RelativeLayout>

</RelativeLayout>
