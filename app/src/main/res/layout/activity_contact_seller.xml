<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nextshopper.activity.ContactSellerActivity">

    <com.nextshopper.view.TitleView
        android:id="@+id/contact_seller_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white"
        app:imageLeft="@drawable/back"
        app:textMiddle="@string/contact_seller"
        app:textMiddleColor="@color/black"
        app:textRight="@string/send"
        app:textRightColor="@color/red"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_below="@id/contact_seller_title"/>
    <RelativeLayout
        android:id="@+id/contact_seller_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_seller_title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rectangle_input">
        <EditText
            android:id="@+id/contact_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@null"
            android:hint="@string/subject" />
        <View
            android:id="@+id/rating_line"
            android:layout_width="match_parent"
            android:layout_below="@id/contact_subject"
            android:layout_marginBottom="8dp"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <EditText
            android:id="@+id/create_review_comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/rating_line"
            android:layout_margin="10dp"
            android:gravity="top"
            android:hint="@string/your_message"
            android:background="@null"
            android:maxLines="10"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/contact_seller_attach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attach_a_photo"
        android:layout_below="@id/contact_seller_message"
        android:drawableLeft="@drawable/attachment"
        android:layout_margin="10dp"
        android:drawablePadding="5dp"/>
    <ImageView
        android:id="@+id/contact_seller_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_seller_attach"/>
</RelativeLayout>
